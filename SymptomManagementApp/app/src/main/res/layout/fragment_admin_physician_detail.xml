<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/adminphysician_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.symptommanagement.admin.Physician.AdminPhysicianDetailFragment">

    <TextView
            android:id="@+id/physician_details_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physician Details :"
            android:textStyle="bold"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:id="@+id/admin_physician_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physician Name"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true"/>

    <TextView
            android:id="@+id/physician_patients_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:text="Patients :"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ListView
            android:id="@+id/physician_patients_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"/>

</LinearLayout>