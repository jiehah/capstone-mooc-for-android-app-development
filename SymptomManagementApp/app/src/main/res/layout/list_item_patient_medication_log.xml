<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:divider="@color/sm_blue"
              android:showDividers="beginning|none|middle|end"
              android:paddingStart="24dp"
              android:baselineAligned="false">

    <CheckBox
            android:id="@+id/patient_medication_check_answer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:contentDescription="Medication Check Answer"
            android:checked="false"
            android:padding="16dp"
            android:gravity="center"
            android:button="@android:drawable/checkbox_off_background"/>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="right">

        <TextView
                android:id="@+id/patient_medication_check_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medication_log_generic_question"
                android:textColor="#333"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/patient_medication_check_summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#333"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</LinearLayout>