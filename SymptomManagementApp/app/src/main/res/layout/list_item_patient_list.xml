<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/touch_selector"
        android:descendantFocusability="blocksDescendants"
        android:showDividers="beginning|none|middle|end"
        android:id="@+id/patient_list_item"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

        <TextView
                android:id="@+id/patient_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/patient_list_last_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Logged Status at "
                android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>

    <ImageButton
            android:id="@+id/patient_list_alert_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:contentDescription="Alert Info"
            android:src="@drawable/ic_action_pain_sparkle"
            android:background="@null"
            android:visibility="invisible"
            style="?android:attr/borderlessButtonStyle"
            android:padding="6dp"/>

</LinearLayout>